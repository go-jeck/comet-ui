<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1>Configurations </h1>
    </div>
    <div class="col-md-2">
      <%= button_to("Log Out", "/logout", method: :get, class: "btn btn-default logout-btn") %>
    </div>
  </div>
  <hr>

  <div class="row">
    <p>Application : <%= @app.name %> </p>
  </div>

  <div class="row">
    <p>Namespace : <%= @app.namespace %> </p>
  </div>

  <div class="row">
    <p>Version : <%= @app.version %> </p>
  </div>

  <table style="width: 100%">
    <tr>
      <th>Key</th>
      <th>Value</th>
    </tr>
    <% @app.configurations.each do |config| %>
      <tr>
        <td><%= config.key %></td>
        <td><%= config.value %></td>
      </tr>
    <% end %>
  </table>
</div>

