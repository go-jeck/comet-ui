<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1>Configurations </h1>
    </div>
    <div class="col-md-2">
      <%= button_to("Log Out", "/logout", method: :get, class: "btn btn-default logout-btn") %>
    </div>
  </div>
  <hr>

  <table class="app-info">
    <tr>
      <td>Application</td>
      <td><%= @app.name %></td>
    </tr>
      <td>Namespace</td>
      <td><%= @app.namespace %></td>
    <tr>
      <td>Version </td>
      <td><%= @app.version %></td>
    </tr>
  </table>

  <table class="configs">
    <tr>
      <th>Key</th>
      <th>Value</th>
    </tr>
    <% @app.configurations.each do |config| %>
      <tr>
        <td><%= config.key %></td>
        <td><%= config.value %></td>
      </tr>
    <% end %>
  </table>
</div>

