<%= render 'layouts/navbar'%>
<%= render 'layouts/path'%>
<hr>
<table class="app-info">
  <tr>
    <td>Application</td>
    <td><%= params[:app_name] %></td>
  </tr>
    <td>Namespace</td>
    <td><%= params[:namespace_name] %></td>
  <tr>
    <td>Version </td>
    <td><%= @active_version %></td>
  </tr>
</table>

<table class="configs">
  <tr>
    <th>Key</th>
    <th>Value</th>
  </tr>
  <% @configurations.each do |config| %>
    <tr>
      <td><%= config['key'] %></td>
      <td><%= config['value'] %></td>
    </tr>
  <% end %>
</table>
<div class="col-md-1">
  <%= button_to("Back", apps_path, method: :get, class:"btn btn-default") %>
</div>
<div class="col-md-11">
  <%= button_to("Edit", edit_configuration_path, params: {app: params[:app_name], namespace: params[:namespace_name]}, method: :get, class: "btn btn-primary") %>
</div>
